<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form" action="/api/users/login" method="POST"> <!-- Update the form action -->
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" name="email" /> <!-- Add the name attribute -->
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" name="password" /> <!-- Add the name attribute -->
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
        <a href="/signup">Signup</a>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>